<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sci2015fair" >

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--
 To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" /> <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/face_icon"
        android:label="@string/app_name"
        android:theme="@style/BaseTheme" >
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".service.CameraServBroadcastReceiverStarter" >
            <intent-filter>
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>
        <receiver android:name=".service.SurveyServiceStarter" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>
        <receiver android:name=".service.SystemStartupServBroadcastReceiverHub" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>

        <service
            android:name=".service.CameraService"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name=".service.Notifications"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name=".opencv.Classify"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name=".service.PedometerServicePersistent"
            android:exported="false" >
        </service>
        <service
            android:name=".service.NotificationServicePersistent"
            android:exported="false" >
        </service>
        <service
            android:name=".service.CheckFilesPresentService"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name=".service.AppStartupServiceHub"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name=".service.CheckIfPersistentServicesRunning"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name=".service.LocationGPSLogPersistentService"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name=".fileoperations.ScanMediaService"
            android:enabled="true"
            android:exported="true" >
        </service>
    </application>

</manifest>
